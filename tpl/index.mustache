<!doctype html>
<html class="no-js" lang="">

<head>
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="manifest" href="site.webmanifest">
  <link rel="apple-touch-icon" href="icon.png">
  <!-- Place favicon.ico in the root directory -->
  <link rel="stylesheet" href="css/normalize.css">
  <link rel="stylesheet" href="css/main.css">
  <meta name="theme-color" content="#fafafa">
</head>

<body>
  <!--[if IE]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
  <![endif]-->
  <h1>{{ site.title }}</h1>
  <p>{{ site.subtitle }}</p>
  <article>
    <ul>
      {{#content.podcasts}}
        <li>
          {{#basicInfo}}
            <h1><a target="_blank" href="{{basicInfo.link}}">{{basicInfo.title}}</a></h1>
            <p>作者: {{basicInfo.author}}, 语言: {{basicInfo.language}}, 平均时长: {{averageDuration}} 秒</p>
            <p>关键字: {{keywords}}</p>
            <img class="podcast-img" src="{{basicInfo.image}}"/>
            <p>{{basicInfo.description}}</p>
            {{#latestEpisode}}
              <p> 最新一集: <a href="{{link}}">{{ title }}</a> 作者: {{author}}  时长: {{ itunes:duration }} </p>
            {{/latestEpisode}}
          {{/basicInfo}}
          {{^basicInfo}}
            <h1>{{config.name}} 更新失败</h1>
          {{/basicInfo}}
        </li>
      {{/content.podcasts}}
    </ul>
  </article>

  <script src="js/plugins.js"></script>
  <script src="js/main.js"></script>

  <!-- Google Analytics: change UA-XXXXX-Y to be your site's ID. -->
  <script>
    window.ga = function () { ga.q.push(arguments) }; ga.q = []; ga.l = +new Date;
    ga('create', 'UA-XXXXX-Y', 'auto'); ga('set','transport','beacon'); ga('send', 'pageview')
  </script>
  <script src="https://www.google-analytics.com/analytics.js" async></script>
</body>

</html>
